# Kalshi Sportsbook Mispricing Agent Configuration

# ============================================
# KALSHI API CREDENTIALS
# ============================================
# Get your API key from: https://kalshi.com/account/api
KALSHI_API_KEY_ID=your_kalshi_key_id_here
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi_private.pem

# ============================================
# SPORTSBOOK API CREDENTIALS (Add as implemented)
# ============================================
# DRAFTKINGS_API_KEY=your_draftkings_key
# FANDUEL_API_KEY=your_fanduel_key
# BETMGM_API_KEY=your_betmgm_key
# CAESARS_API_KEY=your_caesars_key

# ============================================
# MISPRICING ENGINE SETTINGS
# ============================================
# Minimum profit % to consider an arbitrage opportunity
MIN_ARBITRAGE_PROFIT=2.0

# Minimum expected value % for value bets
MIN_EV_PERCENT=5.0

# Maximum sportsbook vig % to consider (ignore books with higher margins)
MAX_HOLD_PERCENT=10.0

# Scan interval in milliseconds (default: 30 seconds)
SCAN_INTERVAL=30000

# ============================================
# RISK MANAGEMENT SETTINGS
# ============================================
# Maximum exposure per outcome ($)
MAX_PER_OUTCOME=500

# Maximum exposure per market ($)
MAX_PER_MARKET=1000

# Maximum daily exposure per venue ($)
MAX_PER_VENUE_DAILY=2000

# Maximum daily loss limit ($)
MAX_DAILY_LOSS=5000

# Maximum drawdown % before stopping
MAX_DRAWDOWN=20

# Kill switch (emergency stop all trading)
KILL_SWITCH=false

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable performance tracking
TRACK_PERFORMANCE=true
